            if(criterionCheck[i].value == dragged) {
                criterionCheck[i].checked = true;
            }
        }*/

        /*document.getElementById("dropZone").addEventListener('dragleave', function(e) {
            this.removeChild(e.target);
        });*/
    </script>
{% endblock %}
